---
import Layout from '../components/Layout.astro';
import FeedbackForm from '../components/FeedbackForm.astro';
import Jokes from '../components/jokes.astro';
import SVG from '../components/svg.astro';
import Buttons from '../components/Buttons.astro';
import Intro from '../components/Intro.astro';
import Redirect from '../components/Redirects.astro'
---

<Layout title="Astro Toolbox">
  <main>
    <SVG/>
    <div id="content">
      <div class="header">
        <h1>Toolbox Template</h1>
        <div class="logo">
          <img
            src="https://res.cloudinary.com/dzkoxrsdj/image/upload/v1652291187/astro_1_c1yk5a.png"
          />
        </div>
        <div class="bttns">
          <a href="https://app.netlify.com/start/deploy?repository=https://github.com/netlify-templates/astro-toolbox?utm_campaign=template-team&utm_source=dtn-button&utm_medium=dtn-button&utm_term=astro-tt-dtn-button&utm_content=astro-tt-dtn-button" class="bttn primary">Deploy to Netlify</a>
          <a href="https://github.com/netlify-templates/astro-toolbox" class="bttn secondary">View Repo</a>
        </div>
      </div>
    <div id="right-content">
      <Buttons />
      <Intro />
      <FeedbackForm />
      <Jokes />
      <Redirect/>
    </div>
  </div>
  </main>
  <footer class="footer">
    Made with <a href="https://ntl.fyi/3P0dwBi"
      ><img
        src="https://res.cloudinary.com/dzkoxrsdj/image/upload/v1646714899/netliheart_ezlkim.svg"
        alt="Netlify Logo"
      /></a
    > for you!
  </footer>
</Layout>

<style>
  :root {
    text-align: center;
  }

  main {
    padding: 2rem 20px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin: 0 auto;
    /* height: 90vh; */
    align-items: center;
  } 

  footer {
    width: 100%;
    height: 100px;
    border-top: 1px solid #eaeaea;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  footer img {
    width: 20px;
  }
</style>
